		    <% reviews.forEach(function(aReview){ %>
		    	    	<div class="aReview">
		    	    		<h3>Review Details:</h3>
		    	    		<p class="aReviewHead">
		    	    			<p>
		    	    				<h4>Topics:</h4>
		    	    				<% aReview.topics.forEach(function(aTopic){ %>
		    	    					<%= aTopic[0] %>
		    	    				<% }) %>
		    	    			</p>
		    	    			Rating: <%= aReview.rating %> &nbsp
		    	    			Date: <%= aReview.date %>
		    	    		</p>
		    	    		<p>
		    	    			<h4>Review Text:</h4>
		    	    			<%= aReview.review %>
		    	    		</p>
		    	    	</div>
		    	    	<br><br><br>
		    	    <% }) %>
		  </div>
		</div>
	    

