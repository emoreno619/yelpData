		<div class="panel panel-success">
		  <div class="panel-heading">
		    <h3 class="panel-title">Location Info:</h3>
		  </div>
		  <div class="panel-body">
		    	    <p>
		    	    	<%= location.address %>
		    	    </p>
		    	    <p>
		    	    	<%= location.phone %>
		    	    </p>
		    	    <p>
		    	    	Rating: <%= location.rating %>
