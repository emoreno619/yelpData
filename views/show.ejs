	<a href="/">Home</a>

	<h1><%= location.name %></h1>
	<h2>Topics discussed in reviews</h2>
	<!-- TOPICS GO HERE -->
	<p>
		<!--	<%= Object.keys(topics) %> -->
		<% topics.forEach(function(aTopic){ %>
			<%= aTopic[0] %>
		<% }) %>
	</p>

	<h2>Location Info:</h2>
	<p>
		<%= location.address %>
	</p>
	<p>
		<%= location.phone %>
	</p>
	<p>
		Rating: <%= location.rating %>
		(<%= location.review_count %> reviews)
	</p>
	<p>
		<%= location.price %>
	</p>
	<p>
		<%= location.category %>
	</p>


	<h2>Reviews</h2>
	<% reviews.forEach(function(aReview){ %>
		<div class="aReview">
			<h3>Review Details:</h3>
			<p class="aReviewHead">
				<p>
					<h4>Topics:</h4>
					<% aReview.topics.forEach(function(aTopic){ %>
						<%= aTopic[0] %>
					<% }) %>
				</p>
				Rating: <%= aReview.rating %> &nbsp
				Date: <%= aReview.date %>
			</p>
			<p>
				<h4>Review Text:</h4>
				<%= aReview.review %>
			</p>
		</div>
		<br><br><br>
	<% }) %>